@page
@model EventPlanning.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<h1>Вход в аккаунт</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="User.Email" class="control-label">Введите адрес электронной почты</label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="User.Password" class="control-label">Введите пароль</label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти в аккаунт" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <hr />
    <p>Нет аккаунта? <a asp-page="/Account/Register">Зарегистрируйтесь!</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}