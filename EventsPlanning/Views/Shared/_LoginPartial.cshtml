@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        <li class="nav-item">
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { @class="nav-link", title = "Manage" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Выйти", "LogOff", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-danger" })
        </li>
    </ul>
}
else
{
<ul class="navbar-nav mr-auto mb-2 mb-lg-0">
    <li class="nav-item">@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", id = "loginLink" })</li>
    <li class="nav-item">@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", id = "registerLink" })</li>
</ul>
}
