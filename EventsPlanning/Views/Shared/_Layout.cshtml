<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-md">
            @Html.ActionLink("Events Planning", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Переключатель навигации">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Главная", "Index", "Home",new { area = "" } , new { @class = "nav-link" })</li>
                    @*<li>@Html.ActionLink("Роли", "Index", "Roles")</li>*@
                    <li class="nav-item">@Html.ActionLink("Информация", "About", "Home",new { area = "" } , new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Связаться", "Contact", "Home",new { area = "" } , new { @class = "nav-link" })</li>
                </ul>
                <form class="d-flex">
                    @Html.Partial("_LoginPartial")
                </form>
            </div>
        </div>
    </nav>
    <div class="container-md body-content pt-3">
        @RenderBody()
        <footer class="">
            <hr />
            <p class="container-md">&copy; @DateTime.Now.Year - Events Planning ASP.NET</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
